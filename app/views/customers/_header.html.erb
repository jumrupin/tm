<header class="navbar navbar-fixed-top">
  <div class="container">
    <nav class="nav navbar-nav nav-left">
      <span class="Timemachine">Timemachine</span>
    </nav>
    <strong>
      <%= form_tag(root_path, :method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag '検索', :name => nil %>
      <% end %>
      </strong>
    <nav>
      <ul class="nav navbar-right">
        <% if customer_signed_in? %>
          <li class="item">
            <%= link_to '　商品一覧　', root_path %>
          </li>
          <li class="item">
            <%= link_to '　ショッピングカート　', customer_carts_path(current_customer) %>
          </li>
          <li class="item">
            <%= link_to '　マイページ　', customer_path(current_customer) %>
          </li>
          <li class="item">
            <%= link_to "　ログアウト　", destroy_customer_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="item">
            <%= link_to '　商品一覧　', root_path %>
          </li>
          <li class="item">
            <%= link_to '　会員登録　', new_customer_registration_path %>
          </li>
          <li class="item">
            <%= link_to "　ログイン　", new_customer_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
